<extension>
  <modules>
    <module>
      <id>Redpill Linpro - Email Actions - Mailto action</id>
      <version>${project.version}</version>
      <customizations>
        <customization>
          <targetPackageRoot>org.alfresco</targetPackageRoot>
          <sourcePackageRoot>org.redpill.modules.emailactions.mailto</sourcePackageRoot>
        </customization>
      </customizations>
      
      <configurations>
        <config evaluator="string-compare" condition="DocLibActions">
          <actions>
            <action id="document-mail-to" type="link" label="rl.actions.mail-to" icon="document-publish">
              <param name="href">{mailtoLink}</param>
            </action>
          </actions>
          
          <actionGroups>
            <actionGroup id="document-browse">
              <action index="600" id="document-mail-to" />
            </actionGroup>
            <actionGroup id="document-details">
              <action index="600" id="document-mail-to" />
            </actionGroup>
          </actionGroups>
        </config>
      </configurations>
    </module>
  </modules>
</extension>